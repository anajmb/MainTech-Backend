generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admins {
  id         Int        @id @default(autoincrement())
  name       String
  cpf        String     @unique
  email      String     @unique
  password   String
  phone      String
  birthDate  DateTime
  teamId     Int
  createDate DateTime   @default(now())
  updateDate DateTime   @updatedAt
  team       AdiminTeam @relation(fields: [teamId], references: [id])
}

model AdiminTeam {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
  Adimins     Admins[]
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  members     TeamMember[]
}

model Employees {
  id          Int          @id @default(autoincrement())
  name        String
  cpf         String       @unique
  email       String       @unique
  phone       String
  password    String
  birthDate   DateTime
  role        Role
  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  inspector   Inspector?
  maintainer  Maintainer?
  memberships TeamMember[]
}

model TeamMember {
  id         Int       @id @default(autoincrement())
  teamId     Int
  personId   Int
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [personId], references: [id])
  team       Team      @relation(fields: [teamId], references: [id])

  @@unique([teamId, personId])
}

model Inspector {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
  tasks      Task[]
}

model Maintainer {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
}

model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  inspectorId    Int
  machineId      Int?
  expirationDate DateTime
  createDate     DateTime  @default(now())
  updateDate     DateTime  @updatedAt
  inspector      Inspector @relation(fields: [inspectorId], references: [id])
  machine        Machine?  @relation(fields: [machineId], references: [id])
}

model Machine {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  location    String
  qrCode      String
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
  tasks       Task[]
  sets        Sets[]   @relation("SetsOnMachine")
}

model Sets {
  id         Int       @id @default(autoincrement())
  name       String
  machineId  Int?
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  subsets    Subsets[] @relation("SetToSubsets")
  machine    Machine[] @relation("SetsOnMachine")
}

model Subsets {
  id      Int     @id @default(autoincrement())
  name    String
  changes Boolean @default(false)
  repairs Boolean @default(false)
  sets    Sets[]  @relation("SetToSubsets")
}

enum Role {
  INSPECTOR
  MAINTAINER
}

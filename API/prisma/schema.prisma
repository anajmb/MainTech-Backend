generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admins {
  id         Int        @id @default(autoincrement())
  name       String
  cpf        String     @unique
  email      String     @unique
  password   String
  phone      String
  birthDate  DateTime
  teamId     Int
  team       AdiminTeam @relation(fields: [teamId], references: [id])
  createDate DateTime   @default(now())
  updateDate DateTime   @updatedAt
}

model AdiminTeam {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
  Adimins     Admins[]
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  members     TeamMember[]
  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
}

model Employees {
  id         Int      @id @default(autoincrement())
  name       String
  cpf        String   @unique
  email      String   @unique
  phone      String
  password   String
  birthDate  DateTime
  role       Role
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  inspector   Inspector?
  maintainer  Maintainer?
  memberships TeamMember[]
}

model TeamMember {
  id       Int       @id @default(autoincrement())
  team     Team      @relation(fields: [teamId], references: [id])
  teamId   Int
  person   Employees @relation(fields: [personId], references: [id])
  personId Int

  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  @@unique([teamId, personId])
}

model Inspector {
  id     Int       @id
  person Employees @relation(fields: [id], references: [id])
  tasks  Task[]

  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model Maintainer {
  id     Int       @id
  person Employees @relation(fields: [id], references: [id])

  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String 
  inspector   Inspector @relation(fields: [inspectorId], references: [id])
  inspectorId Int

  machine   Machine? @relation(fields: [machineId], references: [id])
  machineId Int?

  expirationDate DateTime

  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model Machine {
  id          Int      @id @default(autoincrement())
  name        String
  description String 
  location    String
  sets        Sets[]   @relation("SetsOnMachine")
  tasks       Task[]
  qrCode      String?
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
}

model Sets {
  id         Int       @id @default(autoincrement())
  name       String
  machine    Machine[] @relation("SetsOnMachine")
  machineId  Int?
  subsets    Subsets[] @relation("SetToSubsets")
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
}

model Subsets {
  id   Int    @id @default(autoincrement())
  name String

  sets Sets[] @relation("SetToSubsets")

  changes Boolean @default(false)
  repairs Boolean @default(false)
}

enum Role {
  INSPECTOR
  MAINTAINER
}

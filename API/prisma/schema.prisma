generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  members     TeamMember[]
}

model Employees {
  id        Int       @id @default(autoincrement())
  name      String
  cpf       String    @unique
  role      Role
  photo     String?
  email     String?   @unique
  phone     String?
  password  String?
  birthDate DateTime?

  serviceOrdersMaintained ServicesOrders[] @relation("MaintainedBy")

  status Status @default(PENDING_SETUP)

  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  inspector   Inspector?
  maintainer  Maintainer?
  admin       Admin?
  memberships TeamMember[]
  histories   History[]
}

model TeamMember {
  id         Int       @id @default(autoincrement())
  teamId     Int
  personId   Int
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [personId], references: [id])
  team       Team      @relation(fields: [teamId], references: [id])

  @@unique([teamId, personId])
}

model Admin {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
}

model Inspector {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
  tasks      Task[]
}

model Maintainer {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
}

model Task {
  id             Int        @id @default(autoincrement())
  title          String
  description    String
  inspectorId    Int
  machineId      Int?
  status         TaskStatus
  expirationDate DateTime
  createDate     DateTime   @default(now())
  updateDate     DateTime   @updatedAt
  inspector      Inspector  @relation(fields: [inspectorId], references: [id])
  machine        Machine?   @relation(fields: [machineId], references: [id])
}

model Machine {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  location    String
  qrCode      String?
  temperature Float?
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
  tasks       Task[]
  sets        Sets[]   @relation("SetsOnMachine")
}

model Sets {
  id         Int       @id @default(autoincrement())
  name       String
  machineId  Int?
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  subsets    Subsets[] @relation("SetToSubsets")
  machine    Machine[] @relation("SetsOnMachine")
}

model Subsets {
  id      Int     @id @default(autoincrement())
  name    String
  changes Boolean @default(false)
  repairs Boolean @default(false)
  sets    Sets[]  @relation("SetToSubsets")
}

model ServicesOrders {
  id             Int          @id @default(autoincrement())
  machineId      Int
  machineName    String?
  location       String?
  priority       Priority
  status         ReportStatus @default(PENDING)
  payload        Json?
  inspectorId    Int?
  inspectorName  String?
  maintainerName String?
  serviceNotes   String?
  materialsUsed  String?

  maintainerId Int?
  maintainer   Employees? @relation("MaintainedBy", fields: [maintainerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inspection_reports")
}

model History {
  id          Int       @id @default(autoincrement())
  userId      Int
  action      String
  entityType  String
  entityId    Int?
  description String?
  createdAt   DateTime  @default(now())
  user        Employees @relation(fields: [userId], references: [id])
}

enum Role {
  INSPECTOR
  MAINTAINER
  ADMIN
}

enum TaskStatus {
  PENDING
  COMPLETED
}

enum Status {
  PENDING_SETUP
  ACTIVE
  INACTIVE
}

enum Priority {
  low
  medium
  high
}

enum ReportStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  IN_REVIEW
  COMPLETED
}

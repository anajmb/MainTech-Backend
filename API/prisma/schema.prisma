generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  members     TeamMember[]
}

model Employees {
  id   Int    @id @default(autoincrement())
  name String
  cpf  String @unique
  role Role

  email     String?   @unique
  phone     String?
  password  String?
  birthDate DateTime?

  status Status @default(PENDING_SETUP)

  createDate  DateTime     @default(now())
  updateDate  DateTime     @updatedAt
  inspector   Inspector?
  maintainer  Maintainer?
  admin       Admin?
  memberships TeamMember[]
}

model TeamMember {
  id         Int       @id @default(autoincrement())
  teamId     Int
  personId   Int
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [personId], references: [id])
  team       Team      @relation(fields: [teamId], references: [id])

  @@unique([teamId, personId])
}

model Admin {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
}

model Inspector {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
  tasks      Task[]
}

model Maintainer {
  id         Int       @id
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  person     Employees @relation(fields: [id], references: [id])
}

model Task {
  id             Int        @id @default(autoincrement())
  title          String
  description    String
  inspectorId    Int
  machineId      Int?
  status         TaskStatus
  expirationDate DateTime
  createDate     DateTime   @default(now())
  updateDate     DateTime   @updatedAt
  inspector      Inspector  @relation(fields: [inspectorId], references: [id])
  machine        Machine?   @relation(fields: [machineId], references: [id])
}

model Machine {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  location    String
  qrCode      String?
  temperature Float?
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
  tasks       Task[]
  sets        Sets[]   @relation("SetsOnMachine")
}

model Sets {
  id         Int       @id @default(autoincrement())
  name       String
  machineId  Int?
  createDate DateTime  @default(now())
  updateDate DateTime  @updatedAt
  subsets    Subsets[] @relation("SetToSubsets")
  machine    Machine[] @relation("SetsOnMachine")
}

model Subsets {
  id      Int     @id @default(autoincrement())
  name    String
  changes Boolean @default(false)
  repairs Boolean @default(false)
  sets    Sets[]  @relation("SetToSubsets")
}

enum Role {
  INSPECTOR
  MAINTAINER
  ADMIN
}

enum TaskStatus {
  PENDING
  COMPLETED
}

enum Status {
  PENDING_SETUP
  ACTIVE
  INACTIVE
}
